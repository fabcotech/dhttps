{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "mocha",
      "node"
    ],
    "jsx": "react",
    "noEmit": false,
    "lib": [ "es2015" ],
    "allowJs": true,
    "outDir": "./dist",
    "composite": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
